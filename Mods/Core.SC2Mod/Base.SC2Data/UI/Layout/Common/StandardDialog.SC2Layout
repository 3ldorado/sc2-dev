<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Frame type="StandardDialog" name="StandardDialog">
        <Anchor relative="$parent"/>

        <Frame type="Image" name="FullscreenBlackout">
            <Anchor relative="$parent"/>
            <Color val="0, 0, 0"/>
            <Alpha val="180"/>
        </Frame>

        <Frame type="Image" name="BackgroundImage" template="StandardTemplates/StandardDialogBorderTemplate">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Width val="800"/>
            <Height val="500"/>
        </Frame>

        <Frame type="Label" name="TitleLabel">
            <Anchor side="Top" relative="$parent/BackgroundImage" pos="Min" offset="35"/>
            <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="45"/>
            <Anchor side="Right" relative="$parent/BackgroundImage" pos="Max" offset="-45"/>
            <Style val="StandardDialogTitle"/>
        </Frame>

        <Frame type="Label" name="MessageLabel">
            <Anchor side="Top" relative="$parent/TitleLabel" pos="Max" offset="10"/>
            <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="45"/>
            <Anchor side="Right" relative="$parent/BackgroundImage" pos="Max" offset="-45"/>
            <Style val="StandardDialogMessage"/>
        </Frame>

        <Frame type="ThumbButton" name="LeftButton" template="StandardTemplates/StandardButtonAlternateTemplate">
            <Anchor side="Top" relative="$parent/MessageLabel" pos="Max" offset="30"/>
            <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="40"/>
            <Width val="250"/>
        </Frame>

        <Frame type="ThumbButton" name="RightButton" template="StandardTemplates/StandardButtonTemplate">
            <Anchor side="Top" relative="$parent/LeftButton" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/BackgroundImage" pos="Max" offset="-40"/>
            <Width val="250"/>
        </Frame>

        <Frame type="Frame" name="BottomAnchorFrame">
            <Anchor side="Top" relative="$parent/LeftButton" pos="Max" offset="30"/>
            <Anchor side="Left" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
        </Frame>
    </Frame>    
 
    <Frame type="TimedDialog" name="TimedDialog" template="StandardDialog/StandardDialog">
        
    </Frame>

    <Frame type="ExitDialog" name="ExitDialog" template="StandardDialog/StandardDialog">

    </Frame>
    
    <Frame type="EditBoxDialog" name="EditBoxDialog" template="StandardDialog/StandardDialog">        
        <Frame type="EditBox" name="EditBox">
            <Anchor side="Top" relative="$parent/MessageLabel" pos="Max" offset="30"/>
            <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="20"/>
            <Anchor side="Right" relative="$parent/BackgroundImage" pos="Max" offset="-20"/>
            <Height val="80"/>
            <Image val="BorderImage"/>
            <Style val="StandardEditBox"/>
            <Insets top="20" left="20" bottom="20" right="20"/>

            <Frame type="Image" name="BorderImage">
                <Texture val="@@UI/EditBoxDialogEditBoxBorder" layer="0"/>
                <TextureType val="Border"/>
                <DescFlags val="Internal"/>
            </Frame>
        </Frame>

        <Frame type="ThumbButton" name="LeftButton" template="StandardTemplates/StandardButtonAlternateTemplate">
            <Anchor side="Top" relative="$parent/MessageLabel" pos="Max" offset="130"/>            
        </Frame>        
    </Frame>
    
</Desc>
